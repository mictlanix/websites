@{
    ViewBag.Title = "ASIT - Servicios";
    ViewBag.PageName = "Servicios";
    ViewBag.Section = "Services";
}

<script src="@Url.Content("~/Scripts/path.min.js")" type='text/javascript'></script>
<link href="@Url.Content("~/Content/services.css")" rel="stylesheet" type="text/css"></link>

<div id="services">
    <div id="services-header">
        <p>
            Ponemos a su disposición una serie de servicios de
            soporte técnico y de consultoría en las diversas
            soluciones que manejamos para usted.
        </p>
    </div>
	<div id="services-content">
		@Html.Partial("Page1")
	</div>
</div>
<img id="cross-rotated" src="@Url.Content("~/Content/images/services-cross.png")" alt="cross-rotated"/>

<script type='text/javascript'>
	function slideFromRight(){
        $('#services-page-02').fadeIn(500);
		$('#services-page-01').fadeOut(250);
        $('#services-page-02').animate({left: '-=800'}, 500);
	}
	
	function slideFromLeft(){
		$('#services-page-02').delay(50).animate({left: '+=800'}, 450, function() {
			$('#services-page-02').remove();
		});
		$('#services-page-01').fadeIn(500);
		$('#services-page-02').fadeOut(400);
	}

	Path.map("#page1").to(function(){
	}).enter(slideFromLeft);
    
	Path.map("#page2").to(function(){
		$.get("/Services/Page2", function(data) {
			$('#services-content').append(data);
			slideFromRight();
		});
    });
    
    Path.root("#page1");
    
	$(function(){
		Path.listen();
    });
</script>