@model Mictlanix.WebSites.Asit.Models.ContactUs

@{
    ViewBag.Title = "ASIT - Contacto";
    ViewBag.PageName = "Contacto";
    ViewBag.Section = "Contact";
}

<link href="@Url.Content("~/Content/contact.css")" rel="stylesheet" type="text/css"></link>

<div id="contact">
    <div id="location">
		<div id="location-text" class="gradient-bg">
			<p>
				<span>Arquitectura y Soluciones de IT</span><br/><br/>
				Bosques de Alisos 47-B, Planta Baja<br/>
				Centro Arcos Empresariales<br/>
				Colonia Bosques de las Lomas, Cuajimalpa<br/>
				Distrito Federal, México
			</p>
		</div>
		<div id="location-middle">
			<a href="http://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=Bosques+de+Alisos+47+B&amp;aq=&amp;sll=19.388694,-99.250349&amp;sspn=0.009594,0.013937&amp;ie=UTF8&amp;hq=&amp;hnear=Bosque+de+Alisos+47,+Palo+Alto(Granjas),+Cuajimalpa+de+Morelos,+Ciudad+de+M%C3%A9xico,+Distrito+Federal,+Mexico&amp;ll=19.388724,-99.250317&amp;spn=0.019431,0.029955&amp;z=14&amp;iwloc=A">&nbsp;</a>
		</div>
		<div id="location-map">
			<iframe width="350" height="240" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Bosques+de+Alisos+47+B&amp;aq=&amp;sll=19.388694,-99.250349&amp;sspn=0.009594,0.013937&amp;ie=UTF8&amp;hq=&amp;hnear=Bosque+de+Alisos+47,+Palo+Alto(Granjas),+Cuajimalpa+de+Morelos,+Ciudad+de+M%C3%A9xico,+Distrito+Federal,+Mexico&amp;ll=19.388724,-99.250317&amp;spn=0.019431,0.029955&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe>
		</div>
	</div>
    <div id="info" class="gray-bg">
	</div>
    <div id="form">
		<div id="form-fields" class="gradient-bg">
			<div id="comment-label"></div>
			@using (Html.BeginForm())
			{
				<fieldset>
					@if(Model != null && Model.IsSent)
					{
						<div style="color:blue;text-align:center">
							Mensaje Enviado!
						</div>
					}
					<div>
						<label>Nombre</label>
			            @Html.EditorFor(model => model.Name)
			            @Html.ValidationMessageFor(model => model.Name)
		            </div>
		            
					<div>
						<label>Empresa</label>
			            @Html.EditorFor(model => model.Company)
					</div>
					
					<div>
						<label>Email</label>
			            @Html.EditorFor(model => model.Email)
			            @Html.ValidationMessageFor(model => model.Email)
					</div>
					
					<div>
						<label>Teléfono</label>
			            @Html.EditorFor(model => model.Phone)
					</div>
					
					<div>
						<label>Comentario</label>
			            @Html.EditorFor(model => model.Comment)
					</div>
					
					<button type="submit">Enviar</button>
				</fieldset>
			}
		</div>
		<div id="form-ilustration"></div>
	</div>
</div>
<script type='text/javascript'>    
	$(function(){
		$('#name').focus();
    });
</script>