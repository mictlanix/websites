@using Mictlanix.WebSites.JMR
@using Mictlanix.WebSites.JMR.Models
@using Mictlanix.WebSites.JMR.Helpers
@using Mictlanix.WebSites.JMR.Properties
@model List<EquipmentItem>
@{
    ViewBag.Title = "JMR Maquinaría";
    ViewBag.Section = "Home";
    int i = 1;
}
<script src="@Url.Content("~/Scripts/jquery.slideshow.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery.slideshow.css")" rel="stylesheet" type="text/css"></link>
<link href="@Url.Content("~/Content/home.css")" rel="stylesheet" type="text/css"></link>

@section Slider {
<div id="slider">
	<div id="slide-holder">
		<div id="slide-runner">
			<img id="slide-01" class="slide" alt="Excavadoras" src="@Url.Content("~/Content/images/slide-01.png")" />
			<img id="slide-02" class="slide" alt="Tractores y Equipo de Asfalto" src="@Url.Content("~/Content/images/slide-02.png")" />
			<img id="slide-03" class="slide" alt="Cargadores Frontales y Grúas" src="@Url.Content("~/Content/images/slide-03.png")" />
			<img id="slide-04" class="slide" alt="Retroexcavadoras" src="@Url.Content("~/Content/images/slide-04.png")" />
			<img id="slide-05" class="slide" alt="Motoconformadoras y Vibrocompactadores" src="@Url.Content("~/Content/images/slide-05.png")" />
			<div id="slide-controls">
				<p id="slide-desc" class="text"/>
			</div>
			<div id="slide-nav"></div>
		</div>
	</div>
</div>
}
<div id="home">
	<div id="featured">
		<h2>Destacados</h2>
		@foreach(var item in Model) {
		<div class="ad">
			<a href="/Equipment/Specs/@item.Id">
				<div class="image">
					<img src="@Url.Content(item.Path)" alt="Foto"/>
					<span>@(i++)</span>
				</div>
			</a>
			<div class="info">
				@item.Category.GetDisplayName()<br/>
				@item.MakeName @item.Model<br/>
				@item.Price.ToString("c")
			</div>
		</div>
		}
	</div>
	<div class="column make">
		<h2>Marcas:</h2>
	</div>
	<div class="column space"></div>
	<div class="column">
		<h2>Estamos a sus ordenes</h2>
	</div>
	<div class="hbar"></div>
	<div class="column make">
		@Html.Partial("_MakesList")
	</div>
	<div class="column space"></div><div class="column branches">
		<p>Te ofrecemos<br/>el mejor servicio a tu alcance.</p>
		<div class="email black">
			<a href="mailto:info@jmrmaquinaria.mx">info@jmrmaquinaria.mx</a>
		</div>
		<div class="email">
			<a href="mailto:rafael@jmrmaquinaria.mx">rafael@jmrmaquinaria.mx</a>
		</div>
		<div class="email">
			<a href="mailto:dario@jmrmaquinaria.mx">dario@jmrmaquinaria.mx</a>
		</div>
		<ul class="info">
			<li class="df">
				<h3 class="name"></h3>
				<div class="phone-numbers">
					<div class="email-icon">
						<a href="/Contact#df">
							<img src="@Url.Content("~/Content/images/email-icon.png")" alt="Contacto en DF" title="Contacto en DF"/>
						</a>
					</div>
					<span>01 (55) 1668-5781</span>
					<span>01 (55) 5816-4844</span>
					<span>ID 72*15*69323</span>
				</div>
			</li>
			<li class="puebla">
				<h3 class="name"></h3>
				<div class="phone-numbers">
					<div class="email-icon">
						<a href="/Contact#puebla">
							<img src="@Url.Content("~/Content/images/email-icon.png")" alt="Contacto en Puebla" title="Contacto en Puebla"/>
						</a>
					</div>
					<span>01 (22) 2409-7223</span>
					<span>01 (22) 2409-7224</span>
					<span>ID 52*25077*1</span>
				</div>
			</li>
			<li class="tuxtla">
				<h3 class="name"></h3>
				<div class="phone-numbers">
					<div class="email-icon">
						<a href="/Contact#tuxtla">
							<img src="@Url.Content("~/Content/images/email-icon.png")" alt="Contacto en Tuxtla" title="Contacto en Tuxtla"/>
						</a>
					</div>
					<span>01 (96) 1663-7604</span>
					<span>045 (96) 1157-6320</span>
					<span>045 (96) 1211-5186</span>
				</div>
			</li>
		</ul>
	</div>
	<div class="hbar"></div>
</div>
<script type="text/javascript">
	$(function(){
		slider.init([
	    	{id:"slide-01",desc:"Esperamos encuentre la información necesaria respecto a maquinaría de construcción. Ofrecemos a Ud. las mejores marcas en el mercado, a un excelente precio y listas para trabajar."},
	        {id:"slide-02",desc:false},
	        {id:"slide-03",desc:"Suscríbase a nuestro boletín para recibir información periódica sobre nuestra maquinaría y ofertas."},
	        {id:"slide-04",desc:false},
	        {id:"slide-05",desc:"Te ofrecemos promociones en la adquisición de tu maquinaría, garantías sobre partes originales y precios inigualables, solicita mayor información en nuestra sección de contacto."}
	    ]);
	});
</script>
