@using Mictlanix.WebSites.JMR
@using Mictlanix.WebSites.JMR.Models
@using Mictlanix.WebSites.JMR.Properties
@using Mictlanix.WebSites.JMR.Helpers
@model Mictlanix.WebSites.JMR.Models.Product
 
@{
    ViewBag.Title = Resources.Details;
}

<link href="@Url.Content("~/Content/photos.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/admin.css")" rel="stylesheet" type="text/css"></link>
<div id="admin-panel">

<h2>@Resources.Details</h2>

<fieldset>
    <div class="editor-label">
        @Html.LabelFor(model => model.Category) :
        @Model.Category.GetDisplayName()
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Make) :
        @Model.Make.GetDisplayName()
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Model) :
        @Html.DisplayFor(model => model.Model)
    </div>  
    <div class="editor-label">
        @Html.LabelFor(model => model.Year) :
        @Html.DisplayFor(model => model.Year)
    </div> 
    <div class="editor-label">
        @Html.LabelFor(model => model.Hours) :
        @Html.DisplayFor(model => model.Hours)
    </div>
        
    <div class="editor-label">
        @Html.LabelFor(model => model.Description) :
        @Html.DisplayFor(model => model.Description)
    </div>
        
    <div class="editor-label">
        @Html.LabelFor(model => model.Serial) :
        @Html.DisplayFor(model => model.Serial)
    </div>
        
    <div class="editor-label">
        @Html.LabelFor(model => model.Price) :
        @Html.DisplayFor(model => model.Price)
    </div>
        
    <div class="editor-label">
        @Html.LabelFor(model => model.IsActive) :
        @Html.DisplayFor(model => model.IsActive)
    </div>
        
    <div class="editor-label">
        @Html.LabelFor(model => model.Comment) :
        @Html.DisplayFor(model => model.Comment)
    </div>
       
</fieldset>


<div>
    @Html.ActionLink(Resources.BackToList, "Index") |
    @Html.ActionLink(Resources.Edit, "Edit", new { id = Model.Id }) |
    @Html.ActionLink(Resources.Delete, "Delete", new { id = Model.Id }) 

</div>

<h2>@Resources.Photos</h2>
<fieldset>
    @using (Html.BeginForm("UpdatePhoto", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        {
            @Html.HiddenFor(x => x.Id)

            <div>
                <div class="editor-label">
                    @Resources.UpdateFoto
                </div>
                <div class="editor-input">
                    <input type="file" name="file" id="file" />
                </div>
            
                <p><button type="submit" class="icon save">@Resources.SavePhoto</button></p>
            </div>
        }
    }
    <div id="items-container">
        <ul class="list-items">
            @foreach (var item in Model.Photos)
            {
                @Html.Partial("Photo", item)
            }
        </ul>
    </div>
</fieldset>

</div>